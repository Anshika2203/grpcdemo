<!--            <version>3.9.4</version> &lt;!&ndash; Replace with the latest version &ndash;&gt;-->
<!--        </dependency>-->


        <dependency>
            <groupId>io.github.lognet</groupId>
            <artifactId>grpc-spring-boot-starter</artifactId>
            <version>${lognet.grpc.version}</version>
        </dependency>
    </dependencies>

    <build>
